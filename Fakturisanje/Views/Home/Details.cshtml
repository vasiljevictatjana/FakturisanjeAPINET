@model IEnumerable<Fakturisanje.Models.StavkaFaktureTable>

@{
    ViewBag.Title = "ViewStavke";
}

<h2>Lista stavki za izabranu fakturu</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.kolicina)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cena)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ukupno)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.kolicina)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cena)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ukupno)
        </td>
       
        <td>
            @Html.ActionLink("Izmeni stavku", "EditStavka", new { id = item.redniBr }) |
            @Html.ActionLink("Obrisi stavku", "DeleteStavka", new { id = item.redniBr }) 
        </td>
    </tr>
}

</table>
